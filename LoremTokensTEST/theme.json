{
  "button": {
    "primary": {
      "background": {
        "value": "{accent.default}",
        "type": "color"
      },
      "text": {
        "value": "{accent.onAccent}",
        "type": "color"
      }
    },
    "borderRadius": {
      "value": "{sys.border-radius.16}",
      "type": "borderRadius"
    },
    "borderWidth": {
      "value": "{dimension.sm}",
      "type": "borderWidth"
    }
  },
  "card": {
    "borderRadius": {
      "value": "{sys.border-radius.16}",
      "type": "borderRadius"
    },
    "background": {
      "value": "{bg.default}",
      "type": "color"
    },
    "padding": {
      "value": "{dimension.md}",
      "type": "dimension"
    }
  },
  "boxShadow": {
    "default": {
      "value": [
        {
          "x": "5",
          "y": "5",
          "spread": "3",
          "color": "rgba({shadows.default}, 0.15)",
          "blur": "5",
          "type": "dropShadow"
        },
        {
          "x": "4",
          "y": "4",
          "spread": "6",
          "color": "#00000033",
          "blur": "5",
          "type": "innerShadow"
        }
      ],
      "type": "boxShadow"
    }
  },
  "typography": {
    "H1": {
      "Bold": {
        "type": "typography",
        "value": {
          "fontFamily": "{ref.font-family.primary}",
          "fontWeight": "{ref.typeface.weight-medium}",
          "lineHeight": "{ref.line-height.heading}",
          "fontSize": "{ref.typescale.heading.h1}",
          "paragraphSpacing": "{ref.paragraph-spacing.h1}",
          "letterSpacing": "{ref.letter-spacing.decreased}"
        }
      },
      "Regular": {
        "type": "typography",
        "value": {
          "fontFamily": "{ref.font-family.primary}",
          "fontWeight": "{ref.typeface.weight-regular}",
          "lineHeight": "{ref.line-height.heading}",
          "fontSize": "{ref.typescale.heading.h1}",
          "paragraphSpacing": "{ref.paragraph-spacing.h1}",
          "letterSpacing": "{ref.letter-spacing.decreased}"
        }
      }
    },
    "H2": {
      "Bold": {
        "type": "typography",
        "value": {
          "fontFamily": "{ref.font-family.primary}",
          "fontWeight": "{ref.typeface.weight-medium}",
          "lineHeight": "{ref.line-height.heading}",
          "fontSize": "{ref.typescale.heading.h2}",
          "paragraphSpacing": "{ref.paragraph-spacing.h2}",
          "letterSpacing": "{ref.letter-spacing.decreased}"
        }
      },
      "Regular": {
        "type": "typography",
        "value": {
          "fontFamily": "{ref.font-family.primary}",
          "fontWeight": "{ref.typeface.weight-regular}",
          "lineHeight": "{ref.line-height.heading}",
          "fontSize": "{ref.typescale.heading.h2}",
          "paragraphSpacing": "{ref.paragraph-spacing.h2}",
          "letterSpacing": "{ref.letter-spacing.decreased}"
        }
      }
    },
    "Body": {
      "type": "typography",
      "value": {
        "fontFamily": "{ref.font-family.body}",
        "fontWeight": "{ref.typeface.weight.bodyRegular}",
        "lineHeight": "{ref.line-height.heading}",
        "fontSize": "{ref.typescale.body.sm}",
        "paragraphSpacing": "{ref.paragraph-spacing.h2}"
      }
    }
  }
}